<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Hồ sơ người dùng"
        app:titleTextColor="@color/white"
        app:titleMarginStart="40dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ToolbarTheme" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_menu"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_account_circle_black_24dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="TODO" />
            <TextView
                android:id="@+id/tv_fullname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/fullname"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:text="Le anh Dung"
                android:gravity="right"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_email_black_24dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="TODO" />
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/email"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/tv_email_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="test@gmail.com"
                android:gravity="right"
                android:textSize="20sp"
                android:singleLine="true"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_phone_black_24dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/phone_number"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/tv_phone_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0328001893"
                android:gravity="right"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ic_location_on_black_24dp"
                android:layout_marginLeft="10dp"
                android:contentDescription="TODO" />
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/address"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/tv_name_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hà Nội "
                android:gravity="right"
                android:singleLine="true"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_re_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/re_password"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_menu"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_photo_album_black_24dp"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ảnh"
                android:textSize="20sp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <GridView
            android:id="@+id/gv_photo_album_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:layout_margin="2dp"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="2dp"/>
    </LinearLayout>

</LinearLayout>